<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة التحكم بالشاشات</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap');
        body {
            font-family: 'Tajawal', sans-serif;
        }
        .gradient-bg {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        }
        .media-preview {
            transition: all 0.3s ease;
        }
        .media-preview:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Admin Dashboard -->
    <div id="admin-dashboard" class="min-h-screen">
  

        <div class="container mx-auto px-4 py-8">
            <!-- Add New Screen Card -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden mb-8 fade-in">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <div class="bg-indigo-100 p-2 rounded-full mr-3">
                            <i class="fas fa-plus text-indigo-600"></i>
                        </div>
                        <h2 class="text-xl font-semibold text-gray-800">إضافة شاشة جديدة</h2>
                    </div>
                    
                    <form class="space-y-4">
                        <div>
                            <label for="screen-id" class="block text-sm font-medium text-gray-700 mb-1">معرف الشاشة</label>
                            <input type="text" id="screen-id" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="أدخل معرف الشاشة" required>
                        </div>
                        
                        <div>
                            <label for="orientation" class="block text-sm font-medium text-gray-700 mb-1">اتجاه الشاشة</label>
                            <select id="orientation" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                                <option value="horizontal">أفقي</option>
                                <option value="vertical">عمودي</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="w-full gradient-bg text-white py-2 px-4 rounded-lg hover:opacity-90 transition flex items-center justify-center space-x-2 space-x-reverse">
                            <i class="fas fa-plus"></i>
                            <span>إضافة شاشة</span>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Screens List -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden fade-in">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-6">
                        <div class="flex items-center">
                            <div class="bg-indigo-100 p-2 rounded-full mr-3">
                                <i class="fas fa-desktop text-indigo-600"></i>
                            </div>
                            <h2 class="text-xl font-semibold text-gray-800">قائمة الشاشات</h2>
                        </div>
                        <div class="relative">
                            <input type="text" placeholder="بحث..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <i class="fas fa-search absolute right-3 top-3 text-gray-400"></i>
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">معرف الشاشة</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الاتجاه</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">عنوان IP</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تاريخ الإنشاء</th>
                                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                              <% screens.forEach(function(screen) { %>
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
                                                <i class="fas fa-desktop text-indigo-600"></i>
                                            </div>
                                            <%= screen.id %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                      <select class="orientation-select bg-gray-100 border border-gray-300 text-gray-700 py-1 px-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" data-screen-id="<%= screen.id %>">
                                        <option value="horizontal" <%= screen.orientation === 'horizontal' ? 'selected' : '' %>>أفقي</option>
                                        <option value="vertical" <%= screen.orientation === 'vertical' ? 'selected' : '' %>>عمودي</option>
                                      </select>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <% if(screen.ip) { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <i class="fas fa-wifi mr-1"></i>
                                                <%= screen.ip %>
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                <i class="fas fa-unlink mr-1"></i>
                                                غير متصل
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <div class="flex items-center">
                                            <i class="far fa-calendar-alt text-gray-400 mr-1"></i>
                                            <%= screen.created_at %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <a href="/admin/screen/<%= screen.id %>" class="text-indigo-600 hover:text-indigo-900 mr-3">
                                            <i class="fas fa-edit mr-1"></i> إدارة المحتوى
                                        </a>
                                      
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Screen Management -->
    <div id="screen-management" class="min-h-screen hidden">
        <div class="gradient-bg text-white py-6 shadow-lg">
            <div class="container mx-auto px-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <a href="/admin" class="text-white hover:text-gray-200 transition">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <h1 class="text-2xl font-bold">إدارة محتوى الشاشة <span id="current-screen-id">123</span></h1>
                    </div>
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <span class="text-sm bg-white/20 px-3 py-1 rounded-full">
                            <i class="fas fa-user-circle mr-1"></i> المسؤول
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mx-auto px-4 py-8">
       
      </div>
       
    </div>

    <script>
        // Orientation change handler
        document.querySelectorAll('.orientation-select').forEach(select => {
            select.addEventListener('change', async function() {
                const screenId = this.dataset.screenId;
                const orientation = this.value;
                
                // Show loading state
                const originalHTML = this.innerHTML;
                this.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i> جاري التحديث';
                this.disabled = true;
                
                try {
                    const response = await fetch(`/api/screens/${screenId}/orientation`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ orientation })
                    });
                    
                    if (!response.ok) {
                        throw new Error('فشل تحديث اتجاه الشاشة');
                    }
                    
                    // Show success
                    this.innerHTML = originalHTML;
                    this.disabled = false;
                    
                    // Create and show toast notification
                    const toast = document.createElement('div');
                    toast.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg flex items-center';
                    toast.innerHTML = `
                        <i class="fas fa-check-circle mr-2"></i>
                        <span>تم تحديث اتجاه الشاشة بنجاح</span>
                    `;
                    document.body.appendChild(toast);
                    
                    setTimeout(() => {
                        toast.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                        setTimeout(() => toast.remove(), 300);
                    }, 3000);
                    
                } catch (error) {
                    // Show error
                    this.innerHTML = originalHTML;
                    this.disabled = false;
                    this.value = this.dataset.originalValue || this.value;
                    
                    const toast = document.createElement('div');
                    toast.className = 'fixed bottom-4 right-4 bg-red-500 text-white px-4 py-2 rounded-lg shadow-lg flex items-center';
                    toast.innerHTML = `
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <span>حدث خطأ: ${error.message}</span>
                    `;
                    document.body.appendChild(toast);
                    
                    setTimeout(() => {
                        toast.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                        setTimeout(() => toast.remove(), 300);
                    }, 3000);
                }
            });
            
            // Store original value
            select.dataset.originalValue = select.value;
        });

        // Toggle between admin dashboard and screen management (for demo purposes)
        function showScreenManagement(screenId, orientation, ip) {
            document.getElementById('admin-dashboard').classList.add('hidden');
            document.getElementById('screen-management').classList.remove('hidden');
            
            // Update screen info
            document.getElementById('current-screen-id').textContent = screenId;
            document.getElementById('screen-id-display').textContent = screenId;
            document.getElementById('screen-orientation-display').textContent = orientation === 'horizontal' ? 'أفقي' : 'عمودي';
            document.getElementById('screen-ip-display').textContent = ip || 'غير متصل';
        }
        
        // For demo purposes - simulate clicking on a screen to view its management
        document.querySelectorAll('[href^="/admin/screen/"]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const screenId = this.getAttribute('href').split('/').pop();
                const orientationSelect = document.querySelector(`.orientation-select[data-screen-id="${screenId}"]`);
                const orientation = orientationSelect ? orientationSelect.value : 'horizontal';
                const ip = '192.168.1.' + Math.floor(Math.random() * 255);
                showScreenManagement(screenId, orientation, ip);
            });
        });
    </script>
</body>
</html>