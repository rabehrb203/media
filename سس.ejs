<!-- Current Content -->
<div class="bg-white rounded-xl shadow-md overflow-hidden fade-in">
  <div class="p-6">
    <div class="flex items-center mb-4">
      <div class="bg-indigo-100 p-2 rounded-full mr-3">
        <i class="fas fa-images text-indigo-600"></i>
      </div>
      <h2 class="text-xl font-semibold text-gray-800">المحتوى الحالي</h2>
    </div>

    <% if (!mediaItems || mediaItems.length === 0) { %>
    <div class="text-center py-8">
      <i class="fas fa-inbox text-4xl text-gray-300 mb-2"></i>
      <p class="text-gray-500">لا يوجد محتوى مضاف بعد</p>
    </div>
    <% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% mediaItems.forEach(function(media) { %>
      <div
        class="media-preview bg-gray-50 rounded-lg p-4 border border-gray-200"
      >
        <div class="flex justify-between items-start mb-3">
          <div>
            <p class="text-sm text-gray-500">المدة</p>
            <p class="font-semibold"><%= media.duration %> ثانية</p>
          </div>
          <div class="flex space-x-2 space-x-reverse">
            <button class="text-indigo-600 hover:text-indigo-800">
              <i class="fas fa-edit"></i>
            </button>
            <button class="text-red-600 hover:text-red-800">
              <i class="fas fa-trash-alt"></i>
            </button>
          </div>
        </div>

        <div class="mb-3">
          <p class="text-sm text-gray-500">الرابط</p>
          <p class="text-sm text-gray-700 truncate"><%= media.url %></p>
        </div>

        <% if(media.url.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
        <div class="mt-2">
          <img
            src="<%= media.url %>"
            alt="معاينة المحتوى"
            class="w-full h-32 object-cover rounded-lg"
          />
        </div>
        <% } else if(media.url.match(/\.(mp4|webm|ogg)$/i)) { %>
        <div
          class="mt-2 bg-black rounded-lg flex items-center justify-center h-32"
        >
          <i class="fas fa-play-circle text-white text-4xl"></i>
        </div>
        <% } else { %>
        <div
          class="mt-2 bg-gray-200 rounded-lg flex items-center justify-center h-32"
        >
          <i class="fas fa-file-alt text-gray-500 text-4xl"></i>
        </div>
        <% } %>
      </div>
      <% }); %>
    </div>
    <% } %>
  </div>
</div>
